<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zroperties</title>
    <link rel="stylesheet" href="../../css/admin/propertieDetails.css">
</head>

<body>
    <img class="background-image" src="/img/city.svg" alt="background image">
    <main class="main-ctn">
        <div id="head">
            <h3 class="title"></h3>
            <div>
                <div class="button-container">
                    <!-- Share Button -->
                    <button class="action-button share-button">
                        <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                            width="20" height="20">
                            <path
                                d="M18 16.08c-.76 0-1.44.3-1.96.77L8.91 12.7c.05-.23.09-.46.09-.7s-.03-.47-.09-.7l7.05-4.11c.53.5 1.23.81 2.04.81 1.66 0 3-1.34 3-3s-1.34-3-3-3-3 1.34-3 3c0 .24.04.47.09.7L8.04 8.81C7.5 8.31 6.8 8 6 8c-1.66 0-3 1.34-3 3s1.34 3 3 3c.8 0 1.5-.31 2.04-.81l7.13 4.16c-.05.22-.08.46-.08.7 0 1.66 1.34 3 3 3s3-1.34 3-3-1.34-3-3-3z" />
                        </svg>
                        Share
                    </button>
                    <!-- Love Button -->
                    <button class="action-button love-button">
                        <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                            width="20" height="20">
                            <path
                                d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" />
                        </svg>
                        Love
                    </button>
                    <!-- Save Button -->
                    <!-- <button class="action-button save-button">
                      <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
                        <path d="M17 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V7l-4-4zM12 19c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3zm3-10H6V5h9v4z"/>
                      </svg>
                      Save
                    </button> -->
                </div>
            </div>


            <div class="gallery-container">
                <!-- Main Image -->
                <div class="gallery-main">
                    <img src="/uploads/<%= data?.images[0]?.location %>" alt="Main House" />
                </div>

                <div class="gallery-ctn">
                    <!-- Side Images -->
                    <div class="gallery-side">
                        <% if ((data?.images).length> 3) { %>
                            <% (data?.images).slice(3, 5).forEach((e, index)=> { %>
                                <img src="/uploads/<%= e.location %>" alt="Interior View 1" />
                                <% }) %>
                                    <% } else { %>
                                        <p>No More images available.</p>
                                        <% } %>
                    </div>

                    <!-- Bottom Images -->
                    <div class="gallery-side">
                        <% if ((data?.images).length> 1) { %>
                            <% (data?.images).slice(1, 3).forEach((e, index)=> { %>
                                <img src="/uploads/<%= e.location %>" alt="Interior View 1" />
                                <% }) %>
                                    <% } else { %>
                                        <p>No More images available.</p>
                                        <% } %>
                    </div>
                </div>
            </div>
            <div class="scroll-container">
                <% if ((data?.images).length> 5) { %>
                    <% (data?.images).slice(5).forEach((e, index)=> { %>
                        <img src="/uploads/<%= e.location %>" alt="Interior View 1" />
                        <% }) %>
                            <% } else { %>
                                <p>No More images available.</p>
                                <% } %>
            </div>
        </div>



        <div class="content">
            <div class="info-content">
                <div class="container">
                    <h2 class="title">Flate - <%= (data?.metadata).name %>
                    </h2>
                    <p class="details">
                        <%= (data?.metadata).number %> | Guests · Bedrooms · Beds · Bathrooms
                    </p>
                    <div class="rating">
                        <!-- <span class="star">★ 5.0</span> -->
                        <!-- <a href="#" class="reviews">5 reviews</a> -->
                    </div>
                    <div class="divider"></div>
                    <div class="host-info">
                        <img src="http://www.zroperties.com/wp-content/uploads/2023/07/Green-Floral-Agriculture-Organic-Wheat-Farm-Logo-Design-e1689751623305.png" alt="Host logo" class="host-logo">
                        <span class="host-text"> by Zroperties</span>
                    </div>
                    <!-- <p class="hosting-duration">5 years hosting</p> -->
                    <div class="divider"></div>
                    <div class="features">
                        <div class="feature">
                            <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                                width="24" height="24">
                                <path
                                    d="M19 3h-4.18C14.4 1.84 13.3 1 12 1s-2.4.84-2.82 2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-7 0c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zm0 18c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-2c1.65 0 3-1.35 3-3s-1.35-3-3-3-3 1.35-3 3 1.35 3 3 3z" />
                            </svg>
                            <div class="feature-text">
                                <h3>Location: <%= (data?.metadata).location %>
                                </h3>
                                <!-- <p>You can check in with the building staff.</p> -->
                            </div>
                        </div>

                        <div class="feature">
                            <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                                width="24" height="24">
                                <path
                                    d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-2.21 0-4.21-.9-5.65-2.35C8.9 15.21 10.9 14 12 14c1.1 0 3.1 1.21 5.65 3.65C16.21 19.1 14.21 20 12 20zm0-4c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm0-6c-2.21 0-4.21-.9-5.65-2.35C8.9 7.21 10.9 6 12 6s3.1 1.21 5.65 3.65C16.21 9.1 14.21 10 12 10z" />
                            </svg>
                            <div class="feature-text">
                                <h3>Flat BHK: <%= (data?.metadata).bhk %>
                                </h3>

                                <!-- <p>Swim or soak at this home.</p> -->
                            </div>
                        </div>
                        <% if ((data?.metadata).amount) { %>
                        <div class="feature">
                            <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                                width="24" height="24">
                                <path
                                    d="M19 3h-4.18C14.4 1.84 13.3 1 12 1s-2.4.84-2.82 2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-7 0c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zm0 18c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-2c1.65 0 3-1.35 3-3s-1.35-3-3-3-3 1.35-3 3 1.35 3 3 3z" />
                            </svg>
                            <div class="feature-text">
                                <h3>Rent: <%= (data?.metadata).amount %>
                                </h3>
                                <!-- <p>You can check in with the building staff.</p> -->
                            </div>
                        </div>
                        <% } %>
                        <div class="feature">
                            <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                                width="24" height="24">
                                <path
                                    d="M3 10l1.5 2h15l1.5-2H3zM4 8h16V6H4v2zm0 6h16v2H4v-2zm1.5 4l1.5 2h9l1.5-2H5.5z" />
                            </svg>
                            <div class="feature-text">
                                <h3>Number Of Floors: <%= (data?.metadata).floor %>
                                </h3>
                                <!-- <p>This home is near the national park.</p> -->
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="side-container">
                <button class="send-button" onclick="openWhatsApp()">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="24"
                        height="24">
                        <path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z" />
                    </svg>
                    Send an inquery
                </button>
            </div>
        </div>
        <br><br><br><br><br>

    </main>

    <!-- Modal for enlarged image -->
    <div id="image-modal" class="modal">
        <span class="close"><svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="50" height="50" fill="white"
                viewBox="0 0 50 50">
                <path
                    d="M25,2C12.319,2,2,12.319,2,25s10.319,23,23,23s23-10.319,23-23S37.681,2,25,2z M33.71,32.29c0.39,0.39,0.39,1.03,0,1.42	C33.51,33.9,33.26,34,33,34s-0.51-0.1-0.71-0.29L25,26.42l-7.29,7.29C17.51,33.9,17.26,34,17,34s-0.51-0.1-0.71-0.29	c-0.39-0.39-0.39-1.03,0-1.42L23.58,25l-7.29-7.29c-0.39-0.39-0.39-1.03,0-1.42c0.39-0.39,1.03-0.39,1.42,0L25,23.58l7.29-7.29	c0.39-0.39,1.03-0.39,1.42,0c0.39,0.39,0.39,1.03,0,1.42L26.42,25L33.71,32.29z">
                </path>
            </svg></span>
        <img class="modal-content" id="modal-image">
    </div>
</body>


<script>
    document.addEventListener("DOMContentLoaded", () => {
        const modal = document.getElementById("image-modal");
        const modalImage = document.getElementById("modal-image");
        const closeBtn = document.querySelector(".close");
        document.querySelectorAll(".gallery-container img, .scroll-container img").forEach((img) => {
            img.addEventListener("click", () => {
                modal.style.display = "block";
                modalImage.src = img.src;
            });
        });
        closeBtn.addEventListener("click", () => {
            modal.style.display = "none";
        });
        modal.addEventListener("click", (e) => {
            if (e.target === modal) {
                modal.style.display = "none";
            }
        });
    });
    function openWhatsApp() {
        let phoneNumber = "+917896559790";
        let message = "Hello, I am interested in a property. Can you please share more details?\n- Property Id: <%= (data?.metadata).id %>\n- Location: <%= (data?.metadata).location %>\nThank you!";
        let url = "https://wa.me/" + phoneNumber + "?text=" + encodeURIComponent(message);
        window.open(url, "_blank");
    }
</script>

</html>