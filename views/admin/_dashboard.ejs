    border-bottom: 1px solid #eeeeee;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .jaithra-card-title {
    font-size: 18px;
    font-weight: 600;
    color: #333333;
    margin: 0;
  }

  .jaithra-card-content {
    padding: 25px;
  }

  .jaithra-table {
    width: 100%;
    border-collapse: collapse;
    border-spacing: 0;
  }

  .jaithra-table th,
  .jaithra-table td {
    padding: 12px 16px;
    text-align: left;
    border-bottom: 1px solid #f3f4f6;
    vertical-align: middle;
  }

  .jaithra-table th {
    background: #f9fafb;
    font-weight: 600;
    color: #374151;
    font-size: 14px;
  }

  .jaithra-table td {
    color: #6b7280;
    font-size: 14px;
  }

  .jaithra-table tr:hover {
    background: #f9fafb;
  }

  .jaithra-status-badge {
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 500;
    display: inline-block;
  }

  .jaithra-status-paid {
    background: #dcfce7;
    color: #166534;
  }

  .jaithra-status-pending {
    background: #fef3c7;
    color: #92400e;
  }

  .jaithra-status-overdue {
    background: #fef2f2;
    color: #dc2626;
  }

  .jaithra-action-btns {
    display: flex;
    gap: 8px;
  }

  .jaithra-btn {
