<body>
    <%- include('../partials/admin.header.ejs') %>
        <!-- MAIN SECTION STARTS HERE  -->
        <main class="main" data-app-page="queries">
            <!------------- FINANCE-OVERALL-------------  -->
            <div style="display: none;" class="main-data flex">
                <!-- -------TOTAL AMOUNT--------- -->
